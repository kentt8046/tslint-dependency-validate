{
  "rulesDirectory": ["../../dist"],
  "rules": {
    "allowed-dependencies": [
      true,
      [
        {
          "name": "rule1",
          "sources": ["**/*.ts"],
          "excludeSources": ["**/not-target.ts"],
          "imports": ["./lib"],
          "resolvedImports": ["**/some-module"],
          "builtin": true
        }
      ]
    ]
  },
  "jsRules": {
    "allowed-dependencies": [
      true,
      [
        {
          "name": "rule1",
          "sources": ["**/*.js"],
          "excludeSources": [],
          "imports": ["./lib"],
          "resolvedImports": ["**/some-module"],
          "builtin": true
        }
      ]
    ]
  }
}
