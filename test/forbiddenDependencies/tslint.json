{
  "rulesDirectory": [
    "../../dist"
  ],
  "rules": {
    "forbidden-dependencies": [
      true,
      [
        {
          "name": "rule1",
          "sources": [
            "**/*.ts"
          ],
          "excludeSources": [
            "**/not-target.ts"
          ],
          "imports": [
            "../**"
          ],
          "resolvedImports": [
