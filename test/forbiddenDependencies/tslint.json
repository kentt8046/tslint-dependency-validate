      true,
      [
        {
          "name": "rule1",
          "sources": [
            "**/*.js"
          ],
          "excludeSources": [],
          "imports": [
            "../**"
          ],
          "resolvedImports": [
            "node_modules/**"
          ],
          "builtin": true
        }
      ]
    ]
  }
}